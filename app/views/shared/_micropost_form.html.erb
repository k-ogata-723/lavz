<button class="btn-micropost btn-primary btn">Post</button>

jQueryで投稿用のビュー作成スクリプトを記載
<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script> -->

<script>
$(document).ready(function() {
  var toggle_status = "closed";
    $(".btn-micropost").click(function(){
      if (toggle_status == "closed") {
        $(".view-micropost").fadeIn(50);
        console.log("opened");
        toggle_status = "opened";
      } else {
        $(".view-micropost").fadeOut(50);
        console.log("closed");
        toggle_status = "closed";
      }
    });
});

</script>

<%= form_for(@micropost, html: { multipart: true }) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
   <div class="field">
     <%= f.text_area :content, placeholder: "Compose new micropost..." %>
   </div>

   <%= f.submit "creat", class: "btn-post" %>

   <span class="picture">
     <%= f.file_field :picture, accept: "image/jpeg.iamge/gif,image/png" %>
   </span>
<% end %>

