<% if logged_in? %>
  <div class="container">
    <div class="row col-md-12">
      <h1>
        <section class="user_info">
          <%= render 'shared/user_info' %>
          <%= render 'shared/stats' %>
        </section>
      </h1>
    </div>
    <div class="col-md-8">
        <button class="btn btn-primary btn-micropost">Post</button>
        <!-- マイクロポスト投稿用のビュー
        <div class="sidebar right col-md-6">Hello World</div>
        ポスト用のボタン
        <a href="#" class="btn btn-primary" data-action="toggle" data-side="right">
          Post
        </a> -->

      <!-- </aside> -->
      <div>
        <h3>Micropost Feed</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>

    <div class="col-md-4 container view-micropost">
      <div id="view-micropost">
        <section class="micropost_form">
          <%= render 'shared/micropost_form' %>
        </section>
      </div>
      <h1>Message Box</h1>
      <div id='content'></div>
    </div>
  </div>
<% else %>

<div class="center jumbotron">
  <h1>Welcome to the Sample App</h1>

  <h2>
    This is the home page for the
    <a href="http://www.railstutorial.org/">Ruby on Rails Tutorial</a>
    sample application.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: "Rails logo"),
            'http://rubyonrails.org/' %>

<% end %>
